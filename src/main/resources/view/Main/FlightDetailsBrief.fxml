<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="100.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.ki.lab.to.yourflights.controller.flights.FlightDetailsController">
   <children>
      <VBox prefHeight="100.0" prefWidth="800.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="600.0">
               <children>
                  <FontIcon iconLiteral="mdi2a-airplane-takeoff" iconSize="24">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></FontIcon>
                  <Text fx:id="placeOfDeparture" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="226.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <FontIcon iconLiteral="mdi2a-airplane-landing" iconSize="24">
                     <HBox.margin>
                        <Insets left="50.0" right="10.0" />
                     </HBox.margin></FontIcon>
                  <Text fx:id="placeOfDestination" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="228.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="800.0">
               <children>
                  <FontIcon iconLiteral="mdi2c-calendar-clock" iconSize="24">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </FontIcon>
                  <Text fx:id="departureTime" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="250.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Text>
                  <FontIcon iconLiteral="mdi2c-calendar-clock" iconSize="24">
                     <HBox.margin>
                        <Insets left="26.0" right="10.0" />
                     </HBox.margin>
                  </FontIcon>
                  <Text fx:id="arrivalTime" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="250.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Text>
                  <Text fx:id="airline" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="150.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
