<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<GridPane fx:controller="pl.edu.agh.ki.lab.to.yourflights.controller.addCustomersController"
          xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text text="Please enter your details"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="First Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id ="firstName"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Last Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="lastName"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Country:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="country"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Street Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="street"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Postal code:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="postalCode"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Phone Number:"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <TextField fx:id="phoneNumber"
               GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Email Address:"
           GridPane.columnIndex="0" GridPane.rowIndex="7"/>

    <TextField fx:id="emailAddress"
               GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Button text="Sign In"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
          GridPane.columnIndex="1" GridPane.rowIndex="9"/>

</GridPane>