<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.edu.agh.ki.lab.to.yourflights.controller.CustomerViewController"
            prefHeight="600.0" prefWidth="800.0">


    <AnchorPane layoutY="5.0" prefHeight="600.0" prefWidth="228.0">
        <children>
            <Text layoutY="66.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Airlines" textAlignment="CENTER" wrappingWidth="228.0">
                <font>
                    <Font size="48.0" />
                </font>
            </Text>
            <JFXButton alignment="CENTER" contentDisplay="CENTER" layoutY="111.0" onAction="#showAddCustomer" prefHeight="51.0" prefWidth="228.0" ripplerFill="#0582ca" text="Add new Customer" textAlignment="CENTER">
                <font>
                    <Font size="18.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </JFXButton>
            <JFXButton alignment="CENTER" contentDisplay="CENTER" layoutY="162.0" onAction="#showMainView" prefHeight="51.0" prefWidth="228.0" ripplerFill="#0582ca" text="Home" textAlignment="CENTER">
                <font>
                    <Font size="18.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </JFXButton>
        </children>
    </AnchorPane>
    <AnchorPane layoutX="228.0" layoutY="5.0" prefHeight="600.0" prefWidth="572.0">
        <children>
            <JFXTreeTableView fx:id="customersTableView" layoutY="-5.0" prefHeight="605.0" prefWidth="572.0">
                <columns>
                    <TreeTableColumn fx:id="firstNameColumn" prefWidth="120.0" text="Name" />
                    <TreeTableColumn fx:id="secondNameColumn" prefWidth="120.0" text="Country" />
                    <TreeTableColumn fx:id="countryColumn" prefWidth="120.0" text="Country" />
                    <TreeTableColumn fx:id="cityColumn" prefWidth="120.0" text="City" />
                </columns></JFXTreeTableView>
        </children>
    </AnchorPane>
</AnchorPane>
